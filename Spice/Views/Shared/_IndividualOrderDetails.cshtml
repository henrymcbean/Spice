@model Spice.Models.ViewModels.OrderDetailsViewModel;
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<form method="post">
    <div class="container row border ml-1 backgroundWhite" style="padding:10px;width:100%;">
        <div class="col-lg-8 col-12" style="border-right:1px solid #bbb9b9">
            <br />
            <input type="hidden" asp-for="@Model.OrderHeader.Id" />

            <div class="form-group row">
                <div class="col-3">
                    <label>Name</label>
                </div>
                <div class="col-9">
                    <input disabled asp-for=@Model.OrderHeader.PickUpName class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label>Email</label>
                </div>
                <div class="col-9">
                    <input disabled asp-for=@Model.OrderHeader.ApplicationUser.Email class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label>Phone Number</label>
                </div>
                <div class="col-9">
                    <input disabled asp-for=@Model.OrderHeader.ApplicationUser.PhoneNumber class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label>Order Total</label>
                </div>
                <div class="col-9">
                    <input disabled asp-for=@Model.OrderHeader.OrderTotal class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label>Order Date</label>
                </div>
                <div class="col-9">
                    <input disabled value="@Model.OrderHeader.PickupTime.ToShortDateString() @Model.OrderHeader.PickupTime.ToShortTimeString()" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label>Comments</label>
                </div>
                <div class="col-9">
                    <input disabled asp-for=@Model.OrderHeader.Comments class="form-control" />
                </div>
            </div>
        </div>
    </div>
</form>